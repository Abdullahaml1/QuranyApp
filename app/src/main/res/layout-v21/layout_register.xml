<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/loginCard"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/loginViewsMargin"
    android:layout_marginBottom="@dimen/loginViewsMargin"
    android:background="@color/whiteCardColor"
    android:elevation="5dp"
    app:cardCornerRadius="@dimen/loginCardRadius">

    <LinearLayout
        style="@style/linearParent"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:padding="@dimen/loginViewsMargin">

        <TextView
            style="@style/headerTextPrimary"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:text="@string/register"
            android:textColor="@color/bg_white" />

        <android.support.design.widget.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">

            <EditText
                android:id="@+id/edResgisterName"
                style="@style/modifiedEditText"
                android:drawableEnd="@drawable/ic_person"
                android:hint="@string/name"
                android:inputType="text"
                android:maxLines="1"
                android:paddingEnd="@dimen/_10sdp" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">

            <EditText
                android:id="@+id/edResgisterEmail"
                style="@style/modifiedEditText"
                android:drawableEnd="@drawable/ic_email"
                android:hint="@string/login_email_hint"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingEnd="@dimen/_10sdp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">

            <EditText
                android:id="@+id/edResgisterPassword"
                style="@style/modifiedEditText"
                android:drawableEnd="@drawable/ic_visibility"
                android:hint="@string/login_password_hint"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingEnd="@dimen/_10sdp" />
        </android.support.design.widget.TextInputLayout>

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spRegister"
            style="@style/SpinKitView.Large.ChasingDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_16sdp"
            android:visibility="gone"
            app:SpinKit_Color="@color/spin_color" />

        <Button
            android:id="@+id/btnResgister"
            style="@style/loginButton"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Register" />

        <TextView
            android:id="@+id/tvOpenLogin"
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:text="@string/signup_login_hint"
            android:textAlignment="center"
            android:textColor="@color/whiteTextColor"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
