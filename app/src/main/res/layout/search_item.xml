<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_6sdp">

        <TextView
            android:id="@+id/tvSearchSuraName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/search_text_size"
            android:textStyle="bold"
            tools:text="aaa" />

        <TextView
            android:id="@+id/tvSearchAyahNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="@dimen/search_text_size"
            tools:text="10" />


    </LinearLayout>

    <TextView
        android:id="@+id/tvSearchResult"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="TextViewaaasa"
        android:textSize="@dimen/ayahs_size" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnPlayInSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_play" />

        <Button
            android:id="@+id/btnShowTafseer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_edit_search"
            android:text="@string/tafseerbtn" />


        <Button
            android:id="@+id/btnShowTashkeel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_edit_search"
            android:text="@string/tashkeel" />


    </LinearLayout>
</LinearLayout>